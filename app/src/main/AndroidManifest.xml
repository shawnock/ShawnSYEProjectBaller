<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shawnocked.syeballerapp">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.shawnocked.syeballerapp.ProfileActivity"
            android:label="@string/profile_activity"
            android:configChanges="orientation|screenSize"
            />

        <activity
            android:name="com.example.shawnocked.syeballerapp.SignUpActivity"
            android:label="@string/signup_activity"
            />

        <activity
            android:name="com.example.shawnocked.syeballerapp.SignInActivity"
            android:label="@string/signin_activity"
            />

        <activity
            android:name="com.example.shawnocked.syeballerapp.WelcomeToBallerActivity"
            android:label="WelcomeToBallerActivity"
            />

    </application>

</manifest>